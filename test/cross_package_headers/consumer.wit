package test:consumer@1.0.0;

/// Consumer component that uses cross-package foundation headers
interface geometry {
    /// Create a point with given coordinates
    create-point: func(x: s32, y: s32) -> string;

    /// Create a rectangle and return its description
    create-rectangle: func(x1: s32, y1: s32, x2: s32, y2: s32) -> string;

    /// Calculate area of a rectangle
    calculate-area: func(x1: s32, y1: s32, x2: s32, y2: s32) -> s32;

    /// Validate that cross-package headers work
    test-cross-package-headers: func() -> string;
}

world consumer {
    export geometry;
}
